pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
open = 3
close = 1

eye_blink = open
sushi = 1
last_time = time()

x = 50
y = 50

dx = flr(rnd(128))
dy = flr(rnd(128))

function _init()

end

function _draw()
	cls()
	rectfill(0, 0, 128, 128, 15)
	spr(sushi,x,y,2,2)
	
	
end

function _update()
 if time() - last_time >= eye_blink then
  if sushi == 1 then
   sushi = 3
   eye_blink = close
  else
   sushi = 1
   eye_blink = open
  end
  last_time = time()
 end 
     
 if dx > x then
 	x = x + 0.25
 elseif dx < x then
 	x = x - 0.25
 end
 if dy > y then
 	y = y + 0.25
 elseif dy < y then
  y = y - 0.25
 end
 if x == dx or y == dx then
  dx = 5 + flr(rnd(118))
  dy = 5 + flr(rnd(118)) 
 end   
     
end
